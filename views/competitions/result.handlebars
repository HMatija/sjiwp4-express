<div class="overflow-x-auto">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <td>Name</td> 
        <td>Competition</td> 
        <td>Score</td> 
       
      </tr>
    </thead>
    <tbody>
    
                {{#each result.items}}
                <tr>
                    
                    <td>{{this.Competitor}}</td>
                    <td>{{this.CompName}}</td>
                    <td>{{this.score}}</td>
                   
                    <td>
                        <form method="post" action="/competitions/score_change" class="flex flex-col gap-2">
                            <div class="flex flex-col">
                                <label>Score</label>
                                <input id="score" type="number" name="score" value="{{this.score}}" class="bg-neutral" />
                                <input type="hidden" name="id" value="{{this.login_id}}" />
                                {{>form_buttons}}
                            </div>
                            </form> 
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>