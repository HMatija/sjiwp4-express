<div class="overflow-x-auto">
  <table class="table table-xs table-pin-rows table-pin-cols">
    <thead>
      <tr>
        <th></th> 
        <td>Name</td> 
        <td>Job</td> 
        <td>Last Login</td> 
        <td>Score</td>
        <th></th> 
      </tr>
    </thead> 
    <tbody>
                {{#each result.items}}
                <tr>
                    <th>{{this.login_id}}</th>
                    <td>{{this.Competitor}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.score}}</td>
                    <td>

                        <form method="post" action="/competitions/score_change" class="flex flex-col gap-2">
                            <div class="flex flex-col">
                                <label>Score</label>
                                <input id="score" type="number" name="score" value="{{this.score}}" class="bg-neutral" />
                                <input type="hidden" name="id" value="{{this.login_id}}" />
                                {{form_buttons}}
                            </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
    